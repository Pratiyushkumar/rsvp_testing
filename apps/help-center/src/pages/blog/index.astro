---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./*.mdx');
---

<Layout title="Blog - Help Center">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Help Articles</h1>
    <div class="grid gap-6 lg:grid-cols-2">
      {posts.map(post => (
        <a href={post.url} class="block p-6 bg-white rounded-lg border hover:shadow-lg transition">
          <h2 class="text-xl font-semibold text-gray-900">{post.frontmatter.title}</h2>
          <p class="mt-2 text-gray-600">{post.frontmatter.description}</p>
        </a>
      ))}
    </div>
  </main>
</Layout>